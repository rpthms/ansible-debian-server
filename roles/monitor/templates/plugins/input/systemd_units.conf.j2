# Gather systemd units state
[[inputs.systemd_units]]
  ## Set timeout for systemctl execution
  timeout = "{{ monitor.telegraf.plugins.input.systemd_units.timeout | d('1s') }}"

  ## Filter for a specific unit type, default is "service", other possible
  ## values are "socket", "target", "device", "mount", "automount", "swap",
  ## "timer", "path", "slice" and "scope ":
  unittype = "{{ monitor.telegraf.plugins.input.systemd_units.unittype | d('service') }}"
  {% if monitor.telegraf.plugins.input.systemd_units.interval is defined %}

  ## Data collection interval
  interval = "{{ monitor.telegraf.plugins.input.systemd_units.interval }}"
  {% endif %}
